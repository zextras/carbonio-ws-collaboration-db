[Unit]
Description=Carbonio Workstream Collaboration database sidecar
Documentation=https://docs.zextras.com/
Requires=network-online.target
After=network-online.target
PartOf=carbonio.target

[Service]
Type=simple
ExecStart=/usr/bin/consul connect envoy \
    -token-file /etc/carbonio/ws-collaboration-db/service-discover/token \
    -admin-bind localhost:0 \
    -sidecar-for carbonio-ws-collaboration-db
Restart=on-failure
RestartSec=15
User=carbonio-ws-collaboration-db
KillMode=process
KillSignal=SIGKILL
LimitNOFILE=65536
TimeoutSec=120
TimeoutStopSec=120

[Install]
WantedBy=carbonio.target