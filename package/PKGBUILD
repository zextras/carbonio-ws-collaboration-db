targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-chats-db"
pkgver="0.1.0"
pkgrel="1"
pkgdesc="Carbonio chats DB sidecar"
pkgdesclong=(
  "Carbonio chats DB sidecar"
)
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
section="mail"
priority="optional"
arch="amd64"
license=("spdx:AGPL-3.0-only")
depends=(
  "service-discover"
  "pending-setups"
  "carbonio-core"
  "jq"
)

sources=(
  "carbonio-chats-db"
  "carbonio-chats-db.hcl"
  "carbonio-chats-db.sh"
  "carbonio-chats-db-bootstrap"
  "carbonio-chats-db-sidecar.service"
  "intentions.json"
  "policies.json"
  "service-protocol.json"
)
hashsums=(
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
  "skip"
)

package() {
  cd "${srcdir}"
  install -Dm 755 carbonio-chats-db "${pkgdir}/usr/bin/carbonio-chats-db"
  install -Dm 644 carbonio-chats-db-sidecar.service "${pkgdir}/lib/systemd/system/carbonio-chats-db-sidecar.service"
  install -Dm 644 carbonio-chats-db.hcl "${pkgdir}/etc/zextras/service-discover/carbonio-chats-db.hcl"
  install -Dm 755 carbonio-chats-db-bootstrap "${pkgdir}/usr/bin/carbonio-chats-db-bootstrap"
  install -Dm 644 carbonio-chats-db.sh "${pkgdir}/etc/zextras/pending-setups.d/carbonio-chats-db-setup.sh"
  install -Dm 644 intentions.json "${pkgdir}/etc/carbonio/chats-db/service-discover/intentions.json"
  install -Dm 644 policies.json "${pkgdir}/etc/carbonio/chats-db/service-discover/policies.json"
  install -Dm 644 service-protocol.json "${pkgdir}/etc/carbonio/chats-db/service-discover/service-protocol.json"
}

postinst() {
  getent group 'carbonio-chats-db' >/dev/null ||
    groupadd -r 'carbonio-chats-db'
  getent passwd 'carbonio-chats-db' >/dev/null ||
    useradd -r -M -g 'carbonio-chats-db' -s /sbin/nologin 'carbonio-chats-db'

  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
    systemctl enable carbonio-chats-db-sidecar.service >/dev/null 2>&1 || :
  fi

  echo "======================================================"
  echo "Carbonio chats DB installed successfully!"
  echo "You must run pending-setups to configure it correctly."
  echo "======================================================"
}


prerm() {
  if [ -d /run/systemd/system ]; then
    systemctl --no-reload disable carbonio-chats-db-sidecar.service >/dev/null 2>&1 || :
    systemctl stop carbonio-chats-db-sidecar.service >/dev/null 2>&1 || :
  fi
}

postrm() {
rm -f /etc/carbonio/chats/service-discover/token
  if [ -d /run/systemd/system ]; then
    systemctl daemon-reload >/dev/null 2>&1 || :
  fi
}
